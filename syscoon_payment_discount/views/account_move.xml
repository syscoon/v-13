<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_invoice_tree" model="ir.ui.view">
            <field name="name">account.invoice.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date_due']" position="before">
                    <field name="payment_discount_percent" optional="show" groups="base.group_user" string="Disc. Percent" />
                    <field name="payment_discount_date" optional="show" widget="remaining_days" groups="base.group_user" string="Disc. Date" />
                </xpath>
                <xpath expr="//field[@name='amount_residual_signed']" position="after">
                    <field name="payment_discount_amount_total" optional="hide" groups="base.group_user" string="Disc. Amount" sum="Disc. Amount"/>
                    <field name="payment_discount_amount_total_currency" optional="hide" groups="base.group_user" string="Disc. Payment Amount" sum="Disc. Payment Amount"/>
                </xpath>
            </field>
        </record>

        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account.invoice.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']//field[@name='credit']" position="before">
                    <field name="payment_discount_amount" optional="show"/>
                    <field name="payment_disocunt_amount_currency" optional="show"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>